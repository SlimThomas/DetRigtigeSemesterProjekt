}

<form method="post">
    <div class="form-group">
        <label asp-for="@Model.Hold.Træner" class="control-lable"></label>
        <input asp-for="@Model.Hold.Træner" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.Hold.Hund" class="control-lable"></label>
        <input asp-for="@Model.Hold.Hund" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.Hold.Location" class="control-lable"></label>
        <input asp-for="@Model.Hold.Location" class="form-control" />
    </div>
